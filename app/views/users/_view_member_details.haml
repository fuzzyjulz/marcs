.viewMember
 %p
  .labelText
   Name
  %span.memberName=user.name
 %p
  .labelText
   =label :user, :email
  %span.email=user.email
 
 %p
  .labelText
   =label :user, :address
  %span.addressStreet=user.street
 %p
  .labelText
  %span.addressCity=user.city
 %p
  .labelText
  %span.addressPostcode=user.postcode
 %p
  .labelText
   Membership Paid?
  %span
   -membership = user.membership
   -if membership.nil?
    .unpaidMembership.glyphicon.glyphicon-remove
   -elsif membership.confirmed_paid
    %span.paidMembership.glyphicon.glyphicon-ok
   -elsif membership.member_marked_paid?
    %span.unconfirmedPaidMembership.glyphicon.glyphicon-ok
   -else
    .unpaidMembership.glyphicon.glyphicon-remove
 -if user.financial?
  %p
   .labelText
    Membership Type
   %span
    =user.membership_name
    Member
