.container
 -if ! current_user.financial?
  .row
   .alert.alert-danger Our records show you haven't paid your membership. Some features of the website will not be available
 .row
  .col-md-offset-3.col-md-6
   .panel.panel-default
    .panel-heading
     %h1.panel-title
      Membership Details
    #memberDetails.panel-body.in
     =render "view_member_details", {user: current_user}
     %p
      =button_to "Change my details", edit_user_path, method: :get, class: "updateProfile btn btn-primary"
  -if can? :view_meeting_minutes, current_user
   .col-xs-12.col-md-6
    .panel.panel-default.withLink{data:{toggle:"collapse", target:"#minutesBody"}}
     .panel-heading
      .panel-title
       Meeting Minutes
     #minutesBody.panel-body.in
      coming soon...
 .row
  .col-xs-12.small
   .refreshDetails.jqueryLoad{href: refresh_user_path} Loading members...
